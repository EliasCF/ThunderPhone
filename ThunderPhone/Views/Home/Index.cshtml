@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tilt.js/1.2.1/tilt.jquery.min.js"></script>

    <script>
        $('.hover-tilt').tilt({
            scale: 1.1
        })

        //Smoth scrolling
        $('.indicator').on('click', function (event) {
            if (this.hash !== "") {
                event.preventDefault();

                var hash = this.hash;

                $('html, body').animate({
                  scrollTop: $(hash).offset().top
                }, 700, function(){
   
                window.location.hash = hash;
              });
            } 
        });
    </script>
}

